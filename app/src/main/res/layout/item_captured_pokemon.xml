<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/name" />

        <TextView
            android:id="@+id/textViewPokemonIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/index_placeholder" />

        <TextView
            android:id="@+id/textViewPokemonTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/types_placeholder" />

        <TextView
            android:id="@+id/textViewPokemonHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_placeholder" />

        <TextView
            android:id="@+id/textViewPokemonWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight_placeholder" />

        <ImageView
            android:id="@+id/imageViewPokemon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
